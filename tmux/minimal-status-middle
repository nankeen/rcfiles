# Change prefix to Ctrl-A
set-option -g prefix C-a

# Enable mouse
set -g mouse on

# Use vi key bindings
setw -g mode-keys vi
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection-and-cancel

bind-key 'p' paste-buffer
bind-key 'u' copy-mode

# Set TERM
# Use UTF-8
set -g default-terminal "screen-256color"
set -ga terminal-overrides ",xterm-termite:Tc"

# Base settings
set -g display-time 3000
set -g escape-time 0
set -g history-limit 65535
set -g base-index 1
set -g pane-base-index 1

# Renumber windows after destruction
set-option -g renumber-windows on
setw -g aggressive-resize on

# Autoreload
unbind-key r
bind-key r source-file ~/.tmux.conf \; display-message "Reloaded config..."

bind-key m previous-window
bind-key M select-pane -m

unbind-key ^A
bind-key ^A select-pane -t :.+

# Use tab to switch to last window
bind-key Tab last-window

# VIM pane cycling
unbind-key h
unbind-key j
unbind-key k
unbind-key l
bind-key h select-pane -L
bind-key j select-pane -D
bind-key k select-pane -U
bind-key l select-pane -R

# Resize key binds
unbind-key ^h
unbind-key ^j
unbind-key ^k
unbind-key ^l
bind-key ^h resize-pane -L 3
bind-key ^j resize-pane -D 3
bind-key ^k resize-pane -U 3
bind-key ^l resize-pane -R 3

bind -n F8 setw synchronize-panes

# resize pane
bind -r ^k resizep -U 10 # upward (prefix Ctrl+k)
bind -r ^j resizep -D 10 # downward (prefix Ctrl+j)
bind -r ^h resizep -L 10 # to the left (prefix Ctrl+h)
bind -r ^l resizep -R 10 # to the right (prefix Ctrl+l)

# swap pane

# swap with the previous pane (prefix Ctrl+u)
bind ^u swapp -U

# swap with the next pane (prefix Ctrl+d)
bind ^d swapp -D

# Select the last pane (prefix e)
bind e lastp

# Select the last window (prefix Ctrl+e)
bind ^e last

# Kill pane (prefix q)
bind q killp

# Kill window (prefix Ctrl+q)
bind ^q killw

#-- statusbar --#
set -g status-justify centre
set -g status-left "#[fg=red]s#S:w#I.p#P#[default]"
set -g status-right '[#(whoami)#(date +" %m-%d %H:%M ")]'

set -g status-left-length 120
set -g status-right-length 120
set -g status-interval 1
set -g visual-activity on
setw -g monitor-activity on
setw -g automatic-rename off

set -g message-style "bg=#00346e, fg=#ffffd7"        # tomorrow night blue, base3

set -g status-left "#[bg=#98FB98] ‚ùê #S "       # green
set -g status-left-length 400
set -g status-right "#{?client_prefix, ~ , } #[bg=#0087ff] #h #[bg=red] %Y-%m-%d %H:%M "
set -g status-right-length 600

set -wg window-status-format " #I #W "
set -wg window-status-current-format " #I #W "
set -wg window-status-separator ""
set -wg window-status-current-style "bg=red,fg=black,bold"
set -wg window-status-last-style "fg=red"

# Status bar styling
set -g status-bg black
set -g status-fg black

set -g pane-active-border-style fg=yellow
set -g window-style 'fg=colour250,bg=colour237'
set -g window-active-style 'fg=colour255,bg=colour235'
